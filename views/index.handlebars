<div class="whole">
<h1 class="top">EAT-THAT-BURGER</h1>

<h2 class="top">Burgers available</h2>
<div class='tbd'>
<ul>
  {{#each burger}}
  {{#unless this.devoured}}
  <li style="list-style-type: none;">
    {{this.burger_name}}

    <button class="btn btn-danger devour_burger" value={{this.id}}>
      {{#if devoured}}Can't re-eat a burger!{{else}}Devour!{{/if}}
    </button>


  </li>
  {{/unless}}
  {{/each}}
</ul>
</div>


<h2 class="top">Burgers devoured</h2>
<div class="devoured">
<ul>
  {{#each burger}}
  {{#if this.devoured}}
  <li style="list-style-type: none;">
    {{this.burger_name}}

  </li>
  {{/if}}
  {{/each}}
</ul>
</div>
<div class="otraVez">
<h2>Another burger?</h2>
<form class="create-form">

  <div class="form-group">
    <label for="newBurger">Burger Name:</label>
    <input type="text" id="newBurger" name="name">
  </div>

  <button type="submit" class="btn btn-warning addBurger">Add Burger</button>
</form>
</div>
</div>